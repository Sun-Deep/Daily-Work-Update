<!doctype html>
<html lang="en">

<head>
    
    <title>Admin | Daily Work</title>
    <meta name="viewport"
        content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">
    

    <link href="/admin-main.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/toastr.min.css">
    

    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/popper.min.js"></script>
    <script type="text/javascript" src="/javascripts/toastr.min.js"></script>
    <script type="text/javascript" src="/javascripts/main.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>    

    <style>
        .name_list{
            font-weight: bold;
            font-size: 16px;
            border-bottom: 1px solid silver;
            margin-top: 9px;
        }
        #scroll{
            overflow-y: scroll;
            border-radius: 10px;
            /*background-color: rgb(221, 226, 228);*/
            padding: 10px;
        }
        #todo{
            font-size: 16px;
        }
        .search-wrapper.active {
            width: 100%;
        }
        .search-wrapper.active .input-holder {
            width: 80%;
        }
        .fa-bell{
            color: black;
        }
        .red-dot{
            color: white;
            font-size: 12px;
            background-color: red;
            padding: 3px;
            position: absolute;
            border-radius: 50%;
            line-height: 8px;
        }
        .dropdown-toggle::after{
            display: none;
        }
        .users-table{
            max-width: 150px;
        }
    </style>
    
</head>

<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                {{!-- <div class="logo-src"></div> --}}
                <h4>Daily Work Update</h4>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic"
                            data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button"
                        class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>
            
            {{> admin_header}}
            <div class="btn-group">
            <button type="button" class="btn dropdown-toggle" style="border:none" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="/images/dummy.png" alt="" class="img-fluid" width="50px" style="border-radius: 50%;">
                <span style="color: white; font-size: 20px">{{results.name}}</span>
            </button>
            <div class="dropdown-menu form-group" style="padding: 10px;">
                <form action="/change_password" method="POST">
                <label for="password">Change Password</label>
                    <input type="password" class="form-control" name="password" id="passowrd" minlength="5">
                    <button type="submit" class="btn-wide mb-2 mr-2 btn btn-lg btn-submit mt-2" style="background-color: cornflowerblue; color: white;">Change</button>
                </form>
            </div>
        </div>
        </div>
        
        <div class="app-main">
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic"
                                data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button"
                            class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>

                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            <li>
                                <a href="/" class="app-sidebar__heading">
                                    <i class="metismenu-icon fas fa-home    "></i>
                                    Daily Status
                                </a>
                            </li>
                            <li>
                                <a href="/admin" class="app-sidebar__heading">
                                    <i class="metismenu-icon fas fa-tachometer-alt"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li>
                                <a href="#" class="app-sidebar__heading">
                                    <i class="metismenu-icon fas fa-users"></i>
                                    Users
                                    <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                </a>
                                <ul>
                                    <li>
                                        <a href="/admin/signup">
                                            <i class="metismenu-icon"></i>
                                            Register User
                                        </a>
                                    </li> 
                                    <li>
                                        <a href="/admin/view_users">
                                            <i class="metismenu-icon"></i>
                                            View Active Users
                                        </a>
                                    </li>   
                                    <li>
                                        <a href="/admin/inactive_users">
                                            <i class="metismenu-icon"></i>
                                            View Inactive Users
                                        </a>
                                    </li>   
                                </ul>
                            </li>
                            
                            <li>
                                <a href="#" class="app-sidebar__heading">
                                    <i class="metismenu-icon fas fa-puzzle-piece"></i>
                                    Projects
                                    <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                </a>
                                <ul>
                                    <li>
                                        <a href="/admin/add_project">
                                            <i class="metismenu-icon"></i>
                                            Add New Project
                                        </a>
                                    </li> 
                                    <li>
                                        <a href="/admin/project_details">
                                            <i class="metismenu-icon"></i>
                                            View Project Details
                                        </a>
                                    </li> 
                                    <li>
                                        <a href="/admin/add_project_todo">
                                            <i class="metismenu-icon"></i>
                                            Add Project Issue
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/admin/search_todos">
                                            <i class="metismenu-icon"></i>
                                            Search Project Issues
                                        </a>
                                    </li>    
                                      
                                    <li>
                                        <a href="/admin/assign_programmer">
                                            <i class="metismenu-icon"></i>
                                            Assign Programmer
                                        </a>
                                    </li> 
                                    
                                </ul>
                            </li>
                            <li>
                                <a href="/chat" class="app-sidebar__heading">
                                    <i class="metismenu-icon fas fa-comment-dots"></i>
                                    Chat
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="app-main__outer">
                <div class="app-main__inner">
                    <div class="row">
                        <div class="col-sm-12">
                            {{{body}}}
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="projectDetails" role="dialog" tabindex="-1" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Todo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
               <form action="/edit/todos/:id" method="POST">
                <div class="form-group">
                        <input type="text" class="form-control" id="todo" name="todo">
                </div>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Update</button>
               </form>
            </div>
         
        </div>
    </div>
    </div>


    <script>
        $(document).ready(function() {
            $('.js-example-basic-single').select2();
        });
    </script>
</body>

</html>