<div class="col-md-10 mx-auto">
    <div class="main-card mb-3 card">
        <div class="card-body"><h5 class="card-title">Edit Project</h5>
            <form method="POST" action="/admin/edit/project_details">
                <div class="position-relative form-group">
                    <label for="project_name" class="">Name</label>
                        <input name="project_name" id="project_name" value="{{project.name}}" required placeholder="Project Name Here..." type="text" class="form-control">
                </div>
                <div class="position-relative form-group">
                    <label for="frontend_language" class="">Front-End Languages</label>
                    <input name="frontend_language" value="{{project.frontend}}" id="frontend_language" required placeholder="Frontend language Here..." type="text" class="form-control">
                    
                </div>
                <div class="position-relative form-group">
                    <label for="backend_language" class="">Back-End Langauges</label>
                    <input name="backend_language" value="{{project.backend}}" id="backend_language" required placeholder="Backend language Here..." type="text" class="form-control">
                    
                </div>
                <div class="position-relative form-group">
                    <label for="project_details" class="">Project Details</label>
                    <textarea name="project_details" id="project_details" required rows="5" class="form-control">{{project.details}}</textarea>
                </div>
                <div class="position-relative form-group">
                    <label for="status" class="">Project Status</label>
                    
                        <select name="status" id="status" class="form-control">
                            {{#if project.status 1}}
                                <option value="1" selected>ongoing</option>
                                <option value="0">stopped/completed</option>
                            {{else}}
                                <option value="1">ongoing</option>
                                <option value="0" selected>stopped/completed</option>
                            {{/if}}
                        </select>
                </div>

                 <input type="hidden" value="{{project.id}}" name="project_id", id="project_id">
                <button class="mt-1 btn btn-primary" type="submit">Update</button>
               
            </form>
        </div>
    </div>
</div>