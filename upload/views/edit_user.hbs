<div class="row">
    <div class="col-6">
        <div>
            <h4>Edit User</h4>
            <form method="POST" action="/admin/edit/user">
                <div class="form-row mt-4">
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <label for="name" class=""><span class="text-danger">*</span> Name</label>
                            <input name="name" id="name" value="{{user.name}}" placeholder="Name here..." type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <label for="email" class=""><span class="text-danger">*</span> Email</label>
                            <input name="email" id="email" value="{{user.email}}" placeholder="Email here..." type="email" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <label for="designation" class=""><span class="text-danger">*</span> Designation</label>
                            <input name="designation" id="designation" value="{{user.designation}}" placeholder="Position here..." type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <label for="role" class=""><span class="text-danger">*</span> Role</label>
                            <select name="role" id="role" class="form-control">
                                {{#if user.role 0}}
                                    <option value="0" selected>Admin</option>
                                    <option value="1">Employee</option>
                                {{else}}
                                    <option value="0">Admin</option>
                                    <option value="1" selected>Employee</option>
                                {{/if}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <label for="status" class=""><span class="text-danger">*</span> Status</label>
                            <select name="status" id="status" class="form-control">
                                {{#if user.status 1}}
                                    <option value="1" selected>Active</option>
                                    <option value="0">Inactive</option>
                                {{else}}
                                    <option value="1">Active</option>
                                    <option value="0" selected>Inactive</option>
                                {{/if}}
                            </select>
                        </div>
                    </div>
                    {{!-- <div class="col-md-12">
                        <div class="position-relative form-group">
                            <label for="password" class=""><span class="text-danger">*</span> Password</label>
                            <input name="password" id="password" placeholder="Password here..." type="password" class="form-control" required>
                        </div>
                    </div> --}}
                </div>
                <button class="btn-wide btn-pill btn-shadow btn-hover-shine btn btn-primary btn-lg mt-3">Update Account</button>
                <input type="hidden" value="{{user.id}}" name="id">
            </form>
        </div>
    </div>
    <div class="col-6">
        <div class="d-lg-flex d-xs-none col-lg-5">
            <img src="/images/programmer_fact.png" alt="">
        </div>
    </div>
</div>
                            
                    